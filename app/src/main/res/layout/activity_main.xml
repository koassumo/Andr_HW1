<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/textViewSity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        android:text="@string/region"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageViewSkyClear"
        android:layout_width="132dp"
        android:layout_height="123dp"
        android:layout_marginTop="33dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSity"
        app:srcCompat="@drawable/sun_cloud" />


    <TextView
        android:id="@+id/textViewPressure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/atmo_pressure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewSkyClear"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewSkyClear"
        app:layout_constraintEnd_toStartOf="@+id/imageViewSkyClear"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewSkyClear" />

    <TextView
        android:id="@+id/textViewWind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toEndOf="@+id/imageViewSkyClear" />

    <ImageView
        android:id="@+id/imageViewWeatherMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="33dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewSkyClear"
        app:srcCompat="@drawable/weather_map"
        tools:layout_editor_absoluteX="55dp" />

    <TextView
        android:id="@+id/textViewWeatherMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_map_show"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewWeatherMap"
        app:layout_constraintEnd_toEndOf="@+id/imageViewWeatherMap"
        app:layout_constraintStart_toStartOf="@+id/imageViewWeatherMap"
        app:layout_constraintTop_toTopOf="@+id/imageViewWeatherMap" />



    <ScrollView
        android:layout_width="409dp"
        android:layout_height="210dp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/imageViewWeatherMap"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/buttonPlus1day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_1_day" />

            <Button
                android:id="@+id/buttonPlus2days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_2_days" />

            <Button
                android:id="@+id/buttonPlus3days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_3_days" />

            <Button
                android:id="@+id/buttonPlus4days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_4_days" />

            <Button
                android:id="@+id/buttonPlus5days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_5_days" />

            <Button
                android:id="@+id/buttonPlus6days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_6_days" />

            <Button
                android:id="@+id/buttonPlus7days"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_7_days" />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>