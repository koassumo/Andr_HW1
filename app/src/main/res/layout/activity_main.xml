<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/townTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/region"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.21"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/skyImageView"
        android:contentDescription="@string/desc"
        android:layout_width="112dp"
        android:layout_height="89dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/townTextView"
        app:srcCompat="@drawable/sun_cloud" />

    <TextView
        android:id="@+id/pressureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/atmo_pressure"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/skyImageView"
        app:layout_constraintTop_toTopOf="@+id/degreesTextView" />

    <TextView
        android:id="@+id/degreesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temperature"
        android:textSize="70sp"
        app:layout_constraintBottom_toBottomOf="@+id/skyImageView"
        app:layout_constraintEnd_toStartOf="@+id/skyImageView"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/skyImageView" />

    <TextView
        android:id="@+id/windTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wind"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/degreesTextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.589"
        app:layout_constraintStart_toEndOf="@+id/skyImageView" />

    <ImageView
        android:id="@+id/weatherMapImageView"
        android:contentDescription="@string/desc"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/skyImageView"
        app:srcCompat="@drawable/weather_map"
        tools:layout_editor_absoluteX="-8dp" />

    <TextView
        android:id="@+id/weatherMapTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/weather_map_show"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/weatherMapImageView"
        app:layout_constraintEnd_toEndOf="@+id/weatherMapImageView"
        app:layout_constraintStart_toStartOf="@+id/weatherMapImageView"
        app:layout_constraintTop_toTopOf="@+id/weatherMapImageView" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/weatherMapImageView"
        tools:layout_editor_absoluteX="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/showPlus1DayBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_1_day" />

            <Button
                android:id="@+id/showPlus2DaysBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_2_days" />

            <Button
                android:id="@+id/showPlus3DaysBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_3_days" />

            <Button
                android:id="@+id/showPlus4DaysBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_4_days" />

            <Button
                android:id="@+id/showPlus5DaysBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_5_days" />

            <Button
                android:id="@+id/showPlus6DaysBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_6_days" />

            <Button
                android:id="@+id/showPlus7DaysBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/plus_7_days" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/goOptionsSelectActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/btn_sity_select_title"
        app:layout_constraintBottom_toBottomOf="@+id/townTextView"
        app:layout_constraintStart_toEndOf="@+id/townTextView"
        app:layout_constraintTop_toTopOf="@+id/townTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>